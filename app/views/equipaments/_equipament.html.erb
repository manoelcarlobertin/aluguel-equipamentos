<div class="overflow-x-auto">
  <table id="<%= dom_id equipament %>" class="w-full max-w-md mx-auto my-5 border border-gray-200 rounded-md shadow-sm table-auto
    dark:border-gray-700 dark:bg-gray-800">
    <tbody>
      <tr class="border-b border-gray-200 dark:border-gray-700">
        <th class="text-left px-4 py-2 bg-gray-50 font-semibold w-1/3 dark:bg-gray-900 dark:text-gray-300">Name</th>
        <td class="px-4 py-2 dark:text-gray-100">
          <%= equipament.name %>
        </td>
      </tr>
      <tr class="border-b border-gray-200 dark:border-gray-700">
        <th class="text-left px-4 py-2 bg-gray-50 font-semibold dark:bg-gray-900 dark:text-gray-300">Description</th>
        <td class="px-4 py-2 dark:text-gray-100">
          <%= equipament.description %>
        </td>
      </tr>
      <tr class="border-b border-gray-200 dark:border-gray-700">
        <th class="text-left px-4 py-2 bg-gray-50 font-semibold dark:bg-gray-900 dark:text-gray-300">Available</th>
        <td class="px-4 py-2 dark:text-gray-100">
          <%= equipament.available? ? "Yes" : "No" %>
        </td>
      </tr>
      <tr>
        <th class="text-left px-4 py-2 bg-gray-50 font-semibold dark:bg-gray-900 dark:text-gray-300">Price per day</th>
        <td class="px-4 py-2 dark:text-gray-100">
          <%= number_to_currency(equipament.price_per_day) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
