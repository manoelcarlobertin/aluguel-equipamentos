<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-8 shadow-xl rounded-xl border border-gray-200">
    <div class="mb-6 text-center">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Entrar</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        ou <%= link_to "crie uma conta", new_registration_path(resource_name),
          class: "font-medium text-indigo-600 text-indigo-600 hover:underline" %>
      </p>
    </div>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {
            class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            } %>
        </div>
        <div>
          <%= f.input :password, required: true, label: false, placeholder: "Senha", input_html: {
            class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
            } %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.input :remember_me, as: :boolean, label: false, wrapper_html: { class: "flex items-center" },
            input_html: { class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" } %>
            <label for="<%= f.object_name %>_remember_me" class="ml-2 block text-sm text-gray-900">Lembrar-me</label>
        </div>

        <div class="text-sm">
          <%= link_to "Esqueceu sua senha?" , new_password_path(resource_name),
            class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.button :submit, "Entrar",
          class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"          %>
      </div>
      <% end %>
  </div>
</div>