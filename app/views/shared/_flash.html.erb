<% flash.each do |key, message| %>
  <%# Define classes de estilo para cada tipo de flash %>
  <% classes=case key.to_sym when :notice
    then "bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" when :alert
    then "bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
    else "bg-gray-100 border border-gray-400 text-gray-700 px-4 py-3 rounded mb-4" end %>
  <div class="<%= classes %>">
    <%= message %>
  </div>
<% end %>