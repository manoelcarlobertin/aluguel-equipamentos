<h2 class="text-2xl font-bold mb-6">Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: "border rounded px-3 py-2 w-full" } %>
  </div>

  <div class="mb-6">
    <%= f.input :password,
                required: true,
                input_html: { class: "border rounded px-3 py-2 w-full" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.button :submit, "Entrar" , class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "Esqueceu a senha?" , new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
  </div>
<% end %>

