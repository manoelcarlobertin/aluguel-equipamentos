<h1 class="text-2xl font-bold mb-6">Editar Usuário</h1>

<%= simple_form_for @user, url: user_path(@user), method: :put do |f| %>
  <div class="mb-4">
    <%= f.input :email, input_html: { class: "border rounded px-3 py-2 w-full" } %>
  </div>

  <div class="mb-4">
    <%= f.input :password, input_html: { class: "border rounded px-3 py-2 w-full" },
      hint: "Deixe em branco para não alterar" %>
  </div>

  <div class="mb-6">
    <%= f.input :password_confirmation, input_html: { class: "border rounded px-3 py-2 w-full" } %>
  </div>

  <%= f.button :submit, "Salvar", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    <%= link_to "Cancelar", users_path, class: "ml-4 text-gray-600 hover:underline" %>
<% end %>