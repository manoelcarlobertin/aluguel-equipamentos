<table class="min-w-full bg-white rounded shadow overflow-hidden">
  <%= render 'header' %>
  <tbody>
    <% @users.each do |user| %>
      <tr class="border-b last:border-none hover:bg-gray-50 transition-colors duration-200">
        <td class="py-3 px-6 whitespace-nowrap text-gray-700 font-medium">
          <%= user.id %>
        </td>
        <td class="py-3 px-6 whitespace-nowrap text-blue-600 underline">
          <%= mail_to user.email %>
        </td>
        <td class="py-3 px-6 whitespace-nowrap text-gray-500">
          <%= user.created_at.strftime("%d/%m/%Y %H:%M") %>
        </td>
        <td class="py-3 px-6 whitespace-nowrap flex space-x-3">
          <%= link_to 'Editar', edit_user_path(user),
            class: "bg-blue-600 text-white px-4 py-1 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            %>
            <%= button_to 'Excluir', user_path(user), method: :delete, data: { confirm: 'Tem certeza?' },
              class: "bg-red-600 text-white px-4 py-1 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500"
              %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>